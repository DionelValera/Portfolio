---
import '@/styles/global.css';
import BubbleMenu from '@/components/BubbleMenu';
import CardNav from '@/components/CardNav.jsx';
import logo from './public/vscodium.svg';
import GooeyNav from '@/components/GooeyNav';

// reemplaza/aÃ±ade este items con la estructura que quieres
const items2 = [
  { label: 'Home', href: '#' },
  { label: 'About', href: '#' },
  { label: 'Contact', href: '#' },
];
const items = [
  {
    label: 'home',
    href: '#',
    ariaLabel: 'Home',
    rotation: -8,
    hoverStyles: { bgColor: '#3b82f6', textColor: '#ffffff' },
  },
  {
    label: 'about',
    href: '#',
    ariaLabel: 'About',
    rotation: 8,
    hoverStyles: { bgColor: '#10b981', textColor: '#ffffff' },
  },
  {
    label: 'projects',
    href: '#',
    ariaLabel: 'Projects',
    rotation: 8,
    hoverStyles: { bgColor: '#f59e0b', textColor: '#ffffff' },
  },
  {
    label: 'blog',
    href: '#',
    ariaLabel: 'Blog',
    rotation: 8,
    hoverStyles: { bgColor: '#ef4444', textColor: '#ffffff' },
  },
  {
    label: 'contact',
    href: '#',
    ariaLabel: 'Contact',
    rotation: -8,
    hoverStyles: { bgColor: '#8b5cf6', textColor: '#ffffff' },
  },
];

// handlers/props por defecto (evitan errores de tipado)
const handleMenuClick = () => {};
const menuClass = '';
const menuStyle = {};
const logoProp = logo; // <-- asigna el logo importado
---

<header>
  <div class="hidden">
    <!-- tu BubbleMenu existentea -->
    <BubbleMenu
      client:visible
      logo={logoProp}
      onMenuClick={handleMenuClick}
      className={menuClass}
      style={menuStyle}
      items={items}
      menuAriaLabel="Toggle navigation"
      menuBg="#ffffff"
      menuContentColor="#111111"
      useFixedPosition={false}
      animationEase="back.out(1.5)"
      animationDuration={0.5}
      staggerDelay={0.12}
    >
      <a slot="logo" href="/" class="inline-flex items-center gap-2">
        <img
          src="/vscodium.svg"
          alt="Logo de Dionel Valera"
          class="h-8 w-auto"
          loading="lazy"
        />
        <span class="text-sm font-semibold text-gray-900 dark:text-white">
          Dionel Valera
        </span>
      </a>
    </BubbleMenu>
  </div>

  <div class="">
    <!-- Header superior, centrado y responsivo usando Tailwind -->
    <div class="h-24 flex items-center justify-center relative">
      <GooeyNav
        client:visible
        items={items2}
        particleCount={15}
        particleDistances={[90, 10]}
        particleR={100}
        initialActiveIndex={0}
        animationTime={600}
        timeVariance={300}
        colors={[1, 2, 3, 1, 2, 3, 1, 4]}
      />
    </div>
  </div>
</header>
