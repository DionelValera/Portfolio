---
import "@/styles/global.css";
---

<header id="header-nav" class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
  <nav
    class="relative flex items-center rounded-full border border-neutral-300 bg-white/80 -z-10 px-4 py-2 text-m font-bold"
  >
    <div
      id="active-nav-indicator"
      class="absolute bottom-0 left-0 z-10 h-full rounded-full bg-black transition-all duration-300 ease-in-out"
    >
    </div>
    <a
      href="#home"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Inicio
    </a>
    <a
      href="#about"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Acerca de
    </a>
    <a
      href="#experience"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Experiencia
    </a>
    <a
      href="#projects"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Proyectos
    </a>
    <a
      href="#skills"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Habilidades
    </a>
    <a
      href="#contact"
      class="z-11 text-gray-700 relative rounded-full px-3 py-1 transition-all duration-300 ease-in-out hover:text-black"
    >
      Contacto
    </a>
  </nav>
</header>
