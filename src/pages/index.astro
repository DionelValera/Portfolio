---
import Layout from '@/layouts/layout.astro';
import '@/styles/global.css';
import Silk from '@/components/Silk.jsx';
import Particles from '@/components/Particles.jsx';
import CircularText from '@/components/CircularText';
import DecryptedText from '@/components/DecryptedText';
---

<Layout>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="m-0 p-0 scroll-hidden bg-black">
    <!--  <Silk
      client:load
      speed={10}
      scale={1.3}
      color="#7B7481"
      noiseIntensity={1}
      rotation={6}
    /> -->
    <div
      style={{
        width: '100vw',
        height: '100vh',
        display: 'flex',
        background: '#000',
        position: 'fixed',
      }}
    >
      <Particles
        client:visible
        particleColors={['#ffffff', '#ffffff']}
        particleCount={200}
        particleSpread={10}
        speed={0.1}
        particleBaseSize={100}
        moveParticlesOnHover={true}
        alphaParticles={false}
        disableRotation={false}
      />
    </div>
    <main
      class="relative z-10 h-screen flex flex-col items-center justify-center text-white text-center"
    >
      <div class="text-6xl" style={{ fontFamily: "'Poppins', sans-serif" }}>
        <DecryptedText
          client:load
          speed={70}
          sequential={true}
          text="Muy Pronto..."
          revealDirection="Start"
          useOriginalCharsOnly={false}
          animateOn="view"
        />
      </div>
      <div class="bottom-0 right-0 fixed m-10">
        <CircularText
          client:visible
          text="*DIONEL*VALERA*DIONEL*VALERA"
          onHover="pause"
          spinDuration={10}
          className="custom-class text-sm"
        />
      </div>
    </main>
  </body>
</Layout>
