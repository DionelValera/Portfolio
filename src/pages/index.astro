---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import TechMarquee from '../components/TechMarquee';
import ServiceCards from '../components/ServiceCards';
import { FaArrowRight, FaCode } from 'react-icons/fa';

// Placeholder data - replace with real projects later
const featuredProjects = [
  {
    title: "Contabilito",
    desc: "Gestión contable simplificada y eficiente.",
    tags: ["React", "SQLite", "Electron"],
    link: "https://github.com/DionelValera/contabilito"
  },
  {
    title: "Onix Hyprdots",
    desc: "Entorno de escritorio altamente personalizado basado en Hyprland.",
    tags: ["Arch Linux", "Hyprland", "Bash"],
    link: "https://github.com/DionelValera/Onix-hyprdots"
  }
];
---

<Layout title="Dionel Valera | Frontend Developer">
	<Hero client:load />

  <TechMarquee client:only="react" />

  <section class="py-20 border-t border-white/5 relative z-10">
    <div class="mb-12 text-center max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-5xl font-bold font-display text-white mb-4">Mis Servicios</h2>
        <p class="text-slate-400">Soluciones integrales para tu presencia digital, desde el diseño hasta el despliegue.</p>
    </div>
    <ServiceCards client:visible />
  </section>

  <section class="py-20 relative z-10">
    <div class="flex justify-between items-end mb-12">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Proyectos Destacados</h2>
        <p class="text-slate-400 max-w-lg">Una selección de mis trabajos más recientes y relevantes.</p>
      </div>
      <a href="/projects" class="hidden md:flex items-center gap-2 text-white hover:text-accent transition-colors font-medium">
        Ver todos <FaArrowRight client:visible />
      </a>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {featuredProjects.map((project) => (
        <article class="group relative bg-white/5 border border-white/5 rounded-3xl overflow-hidden hover:border-white/20 transition-all hover:-translate-y-1">
          <div class="h-48 bg-linear-to-br from-slate-800 to-black flex items-center justify-center relative overflow-hidden">
             <!-- Placeholder for project image -->
             <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors z-10"></div>
             <span class="text-slate-600 font-bold text-4xl opacity-20 transform -rotate-12 group-hover:scale-110 transition-transform duration-500">{project.title}</span>
          </div>
          
          <div class="p-8">
            <h3 class="text-2xl font-bold text-white mb-2">{project.title}</h3>
            <p class="text-slate-400 mb-6">{project.desc}</p>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map(tag => (
                <span class="px-3 py-1 rounded-full bg-white/5 text-xs text-slate-300 border border-white/5">{tag}</span>
              ))}
            </div>
            <a href={project.link} target="_blank" class="inline-flex items-center gap-2 text-sm font-bold text-white hover:text-accent transition-colors">
              Ver Código <FaCode />
            </a>
          </div>
        </article>
      ))}
    </div>
    
    <div class="mt-8 text-center md:hidden">
       <a href="/projects" class="inline-flex items-center gap-2 text-white hover:text-accent transition-colors font-medium">
        Ver todos <FaArrowRight client:visible />
      </a>
    </div>
  </section>
</Layout>


